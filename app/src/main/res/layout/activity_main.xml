<!--                android:orientation="vertical">-->

<!--                <ImageView-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="@dimen/_80sdp"-->
<!--                    android:padding="@dimen/_5sdp"-->
<!--                    android:src="@drawable/ic_chat"/>-->
